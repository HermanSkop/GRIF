if purchases.length > 0
    table#history-table.history-table.hidden
        thead
            tr.history-row
                th.history-item #{name}
                th.history-item #{email}
                th.history-item #{phone}
                th.history-item #{plan}
                th.history-item #{promo_name}
                th.history-item #{price}
                th.history-item #{date}
        tbody
            each purchase in purchases
                tr.history-row
                    td.history-item #{purchase.name}
                    td.history-item #{purchase.email}
                    td.history-item #{purchase.phone}
                    td.history-item #{purchase.plan}
                    td.history-item #{purchase.promo}
                    td.history-item $#{Math.round(purchase.price)}
                    td.history-item #{purchase.date.getDate() + '.' + (purchase.date.getMonth() + 1) + '.' + purchase.date.getFullYear()}
else
    table#history-table.history-table.hidden(style='padding: 10px')
        tr
            td #{tr.no_purchases}